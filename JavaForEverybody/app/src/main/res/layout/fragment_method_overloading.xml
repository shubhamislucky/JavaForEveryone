<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.shubhamsingh.javaforeverybody.MethodOverloading"
    android:background="#ffffff" android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mover_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f1a727"
                android:text="@string/mover_head"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                />
            <TextView
                android:id="@+id/mover_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/mover_def"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/mover_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.7"
                android:gravity="fill_horizontal"
                android:background="@drawable/rounded_corner"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:text="@string/mover_first_ex"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/mover_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/misc_output"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/mover_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:background="@drawable/commandprompt"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="@string/mover_first_output"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/mover_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/mover_second_lets"
                android:layout_marginTop="25dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/mover_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.7"
                android:gravity="fill_horizontal"
                android:background="@drawable/rounded_corner"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:text="@string/mover_second_ex"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/mover_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/misc_output"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/mover_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:background="@drawable/commandprompt"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="@string/mover_second_output"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
