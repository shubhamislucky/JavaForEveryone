<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:id="@+id/splashid"
    android:background="#8b85ff"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <ImageView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/splash_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="J A V A"
        android:textSize="55dp"
        android:textColor="#fff"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Programmers of tomorrow are wizards of future"
            android:textSize="17dp"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textColor="#fefefe"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:shadowRadius="3"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowColor="#554dff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- Gabe(Created Valve)"
            android:id="@+id/textView3"
            android:textColor="#fefefe"
            android:fontFamily="cursive"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:shadowRadius="3"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowColor="#554dff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/togethersplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffde00"
            android:textSize="15sp"
            android:text="togetherBus Inc."
            android:letterSpacing="0.05"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:paddingBottom="18dp"/>
    </LinearLayout>
</LinearLayout>