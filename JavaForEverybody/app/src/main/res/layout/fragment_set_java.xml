<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="me.shubhamsingh.javaforeverybody.SetJava"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setjava_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="@string/YourJava"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/setjava_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/letsSetJDK"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/jdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#00ab6b"
                android:textStyle="bold"
                android:text="@string/jdk"
                android:letterSpacing="0.07"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/setjava_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#333"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/setjava_setthepath"
                android:layout_marginTop="40dp"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/setjava_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/nextsteps"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/setjava_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="@string/tip1"
                android:textColor="#00ab6b"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:letterSpacing="0.02"
                android:lineSpacingMultiplier="1.2"
                />
            <TextView
                android:id="@+id/setjava_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:letterSpacing="0.02"
                android:text="@string/nextsteps2"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/setjava_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#333"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/setjava_settemp"
                android:layout_marginTop="35dp"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/setjava_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/tempsteps"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/setjava_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:padding="13dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#00ab6b"
                android:textSize="14sp"
                android:text="@string/exampletemp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/temppath"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/setjava_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#333"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/setjava_setpemanent"
                android:layout_marginTop="25dp"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/setjava_eleven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/permanentpath"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="15dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/pfirst"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/psecond"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/pthird"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/pfour"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/pfive"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
