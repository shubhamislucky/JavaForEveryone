<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AboutMe">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hero"
                android:minHeight="150dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/about_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:padding="12dp"
                android:textSize="22sp"
                android:text="Hello ..."
                android:background="@drawable/about_rounded"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:shadowDx="1"
                android:shadowColor="#c4080e"
                android:shadowDy="1"
                android:shadowRadius="3"
                />

            <TextView
                android:id="@+id/about_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.03"
                android:text="@string/about_us"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/about_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textSize="18sp"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/about_us_two"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:layout_marginTop="40dp"
                />
            <ImageView
                android:id="@+id/portfolio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/portfolio"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:clickable="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/google"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/google"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/behance"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/behance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/about_share_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:textColor="#555"
                android:text="Show your support. Share the app"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#ccc"
                android:shadowRadius="2"
                />
            <ImageView
                android:id="@+id/share"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/about_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:textColor="#555"
                android:text="Rate this app"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="#ccc"
                android:shadowRadius="2"
                />
            <ImageView
                android:id="@+id/star"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:src="@drawable/stars"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/about_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/madewithlove"
                android:gravity="center_horizontal"
                android:textSize="17sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="#555555"
                android:letterSpacing="0.03"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:maxLines="1"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>