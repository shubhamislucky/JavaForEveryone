<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.shubhamsingh.javaforeverybody.Program_sixteen"
    android:background="#f1f1f1" android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/methride_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/program_red"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/methride_head"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.2"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/methride_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:text="@string/methride_def"
                    android:lineSpacingMultiplier="1.7"
                    android:textSize="13sp"
                    android:padding="15dp"
                    android:textColor="#222"
                    android:layout_marginTop="40dp"
                    android:gravity="fill_horizontal"
                    android:scrollHorizontally="true"
                    />
            </HorizontalScrollView>
            <TextView
                android:id="@+id/methride_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:background="@drawable/commandprompt"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="@string/methride_output"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
