<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="me.shubhamsingh.javaforeverybody.OOP"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oop_typeface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/oopheading"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                />
            <TextView
                android:id="@+id/oopdef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="#333"
                android:text="@string/oopdef"
                android:layout_marginTop="20dp"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:letterSpacing="0.02"
                />
            <TextView
                android:id="@+id/oop_typeface2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/encapsulation_heading"
                android:textSize="20sp"
                android:layout_marginTop="35dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="9dp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:background="#efefef"
                />
            <TextView
                android:id="@+id/oop_typeface3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="#333"
                android:text="@string/encapsulation"
                android:layout_marginTop="20dp"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:letterSpacing="0.02"
                />
            <TextView
                android:id="@+id/oop_typeface4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Plymorphism_heading"
                android:textSize="20sp"
                android:layout_marginTop="35dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#efefef"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                />
            <TextView
                android:id="@+id/oop_typeface5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="#333"
                android:text="@string/polymorphism"
                android:layout_marginTop="20dp"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:letterSpacing="0.02"
                />
            <TextView
                android:id="@+id/oop_typeface6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:textSize="20sp"
                android:text="@string/Inheritance_heading"
                android:textColor="#000000"
                android:layout_marginTop="35dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#efefef"
                android:letterSpacing="0.03"
                />
            <TextView
                android:id="@+id/oop_typeface7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="#333"
                android:text="@string/inheritance"
                android:layout_marginTop="20dp"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:letterSpacing="0.02"
                />
            <TextView
                android:id="@+id/oop_typeface8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/javacodeoop"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="30px"
                android:paddingBottom="20px"
                android:paddingTop="10px"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40px"
                android:background="@drawable/rounded_corner"
                />





        </LinearLayout>



    </ScrollView>



</LinearLayout>
