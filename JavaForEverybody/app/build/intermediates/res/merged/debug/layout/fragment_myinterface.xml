<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="me.shubhamsingh.javaforeverybody.myinterface"
    android:background="#ffffff" android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/interface_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f1a727"
                android:text="@string/interface_head"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:background="#efefef"
                />
            <TextView
                android:id="@+id/interface_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/interface_def"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/interface_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.7"
                android:gravity="fill_horizontal"
                android:background="@drawable/rounded_corner"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:text="@string/interface_syn"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/interface_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/interface_lets_ex"
                android:layout_marginTop="30dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/interface_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.7"
                android:gravity="fill_horizontal"
                android:background="@drawable/rounded_corner"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:text="@string/interface_first_ex"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/interfacejava"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:minWidth="250dp"
                android:src="@drawable/interfacerelation"
                android:scaleType="fitCenter"
                android:layout_marginTop="0dp"
                />
            <TextView
                android:id="@+id/interface_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interface_implement_head"
                android:textSize="20sp"
                android:paddingLeft="9dp"
                android:textColor="#333"
                android:letterSpacing="0.03"
                android:background="#efefef"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/interface_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.7"
                    android:gravity="fill_horizontal"
                    android:background="@drawable/rounded_corner"
                    android:padding="15dp"
                    android:text="@string/interface_final_ex"
                    android:layout_marginTop="30dp"
                    android:scrollHorizontally="true"
                    />
            </HorizontalScrollView>
            <TextView
                android:id="@+id/interface_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:gravity="fill_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.02"
                android:text="@string/misc_output"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/interface_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.2"
                android:gravity="fill_horizontal"
                android:background="@drawable/commandprompt"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="@string/interface_output"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
