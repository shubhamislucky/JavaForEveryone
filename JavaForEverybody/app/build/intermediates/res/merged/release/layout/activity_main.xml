
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#efefef"
    android:id="@+id/justanid"
    android:orientation="vertical">

            <TextView
                android:id="@+id/mainlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java For Everyone"
                android:layout_centerHorizontal="true"
                android:textSize="23sp"
                android:textColor="#fff"
                android:letterSpacing="0.03"
                android:layout_gravity="center"
                android:shadowRadius="3"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowColor="#554dff"
                android:background="#8b85ff"
                android:gravity="center_horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:elevation="7dp"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fefefe">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/button1"
                        android:onClick="navDrawer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/open"
                            android:layout_marginTop="30dp"
                            />
                        <TextView
                            android:id="@+id/main_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Let's learn Java"
                            android:textColor="#333"
                            android:layout_marginTop="50dp"
                            android:textSize="16sp"
                            android:shadowRadius="2"
                            android:shadowDy="1"
                            android:shadowDx="1"
                            android:shadowColor="#d9d9d9"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mybutton"
                        android:onClick="hello"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/question"
                            android:layout_marginTop="30dp"

                            />
                        <TextView
                            android:id="@+id/main_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Practice Questions"
                            android:textColor="#333"
                            android:layout_marginTop="50dp"
                            android:textSize="16sp"
                            android:shadowRadius="2"
                            android:shadowDy="1"
                            android:shadowDx="1"
                            android:shadowColor="#d9d9d9"
                            />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <LinearLayout
                        android:id="@+id/buttonpdf"
                        android:onClick="prog"
                        android:text="Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/code"
                            android:layout_marginTop="30dp"

                            />
                        <TextView
                            android:id="@+id/main_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write some code"
                            android:textColor="#333"
                            android:layout_marginTop="50dp"
                            android:textSize="16sp"
                            android:shadowRadius="2"
                            android:shadowDy="1"
                            android:shadowDx="1"
                            android:shadowColor="#d9d9d9"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/myFAB"
                        android:onClick="iamcoder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/chatting"
                            android:layout_marginTop="30dp"

                            />
                        <TextView
                            android:id="@+id/main_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boost Up"
                            android:textColor="#333"
                            android:layout_marginTop="50dp"
                            android:textSize="16sp"
                            android:shadowRadius="2"
                            android:shadowDy="1"
                            android:shadowDx="1"
                            android:shadowColor="#d9d9d9"
                            />

                    </LinearLayout>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/myshare"
                        android:onClick="aboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/heart"
                            android:layout_marginTop="30dp"

                            />


                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </RelativeLayout>


</LinearLayout>

